<div class="comment clearfix">
	<div class="comment_content">
		<p class="comment_name"><strong><%= comment.name %></strong></p>
		<p class="comment_body"><%= comment.name %></p>
		<p class="comment_date"><%= time_ago_in_words(comment.created_at) %> ago </p>

	</div>
	<p>	<% if user_sign_in? %>
			<%= link_to "Delete comment", [comment.post, comment], method: :delete, class: "button", data: {confirm: "Are you sure?"} %>
		<% end %>
	</p>
</div>